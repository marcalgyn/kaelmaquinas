<div class="container gallery-container">


<div class="jumbotron contato">
    <div class="container">
        
        <div class="row featurette">
            <div class="col-md-6">
                <h3 class="featurette-heading exp-home-titulo">{{contatoinfo.tituloform}}</h3>

                {{>_msg}}

                <form method="POST" action="/contato/add-contato">
                    <div class="form-group">
                        <label>Nome</label>
                        <input name="nome" required type="text" class="form-control" placeholder="Nome completo"
                            value="{{contato.nome}}">
                    </div>
                    <div class="form-group">
                        <label>E-mail</label>
                        <input name="email" required type="email" class="form-control" placeholder="Seu Melhor E-mail"
                            value="{{contato.email}}">
                    </div>
                    <div class="form-group">
                        <label>Assunto</label>
                        <input name="assunto" required type="text" class="form-control"
                            placeholder="Assunto da mensagem" value="{{contato.assunto}}">
                    </div>
                    <div class="form-group">
                        <label>Mensagem</label>
                        <textarea name="mensagem" required class="form-control" rows="6">{{contato.mensagem}}</textarea>
                    </div>
                    <button type="submit" class="btn btn-danger">Enviar</button>
                </form>
            </div>
            <div class="col-md-6">
                <h3 class="featurette-heading exp-home-titulo">{{contatoinfo.titulohratend}}</h3>
                <p class="lead">{{contatoinfo.hratend}}</p>
                <hr>
                <address>
                    <strong>{{contatoinfo.tituloend}}</strong><br>
                    {{contatoinfo.logradouro}}, {{contatoinfo.complemento}}<br>
                    {{contatoinfo.bairro}}, {{contatoinfo.cidade}} - {{contatoinfo.uf}} <br>
                    {{contatoinfo.telefone}}
                </address>
            </div>
        </div>
    </div>
</div>

<div class="jumbotron contato">
    <div class="container">

    </div>
</div>

</div>
